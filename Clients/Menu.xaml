<Window x:Class="Clients.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clients"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter IP Address:" Margin="0,0,0,5"/>
            <TextBox Name="IpAddressTextBox" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Enter Port:" Margin="0,0,0,5"/>
            <TextBox Name="PortTextBox" Width="300" Margin="0,0,0,10"/>

            <Button Content="Submit" Width="100" HorizontalAlignment="Left" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
