<Window x:Class="Clients.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clients"
        mc:Ignorable="d"
        Title="Chat Client" Height="450" Width="800">
    <Grid>
        <ListBox Name="MessageList" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,50" />
        <TextBox Name="MessageInput" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,10,110,10" Height="30"/>
        <Button Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,10,10,10" Width="100" Click="SendButton_Click"/>
    </Grid>
</Window>
